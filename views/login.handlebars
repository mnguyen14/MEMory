<link rel="stylesheet" href="./css/login.css">

<div class="background">
  <div class="container">
    <div class="row align-center d-flex-reverse flex-wrap" id="centerDiv">
      
      <div class="col">
        <h1 class="text-center" id="title">MEMory</h1>
        <h2 class="text-center" id="subtext">A Reflective Online Journal</h2>
        <p class="text-center" id="textpitch">
          Take your journaling online. Make, look back at, and delete journal entries from the ease of your device.
        </p>
      </div>

      <div class="col">
          <form class="form login-form">
              <div class="form-group">
                <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp"
                  placeholder="Email">
              </div>
              <div class="form-group">
                <input type="password" class="form-control" id="password-login" placeholder="Password">
              </div>
              <div class="d-grid gap-2 col-6 mx-auto">
              <button type="submit" class="btn btn-primary text-center align-center" id="submitBtn">Log In</button>
            </div>
              <p class="text-center">
                Don't have an account? <a href="/signup">Sign up</a>
              </p>
          </form>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>